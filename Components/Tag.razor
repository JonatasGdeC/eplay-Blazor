@if (Size == TypeTag.Prymary)
{
    <p class="tag big">
        @Text
    </p>
}
else
{
    <p class="tag small">
        @Text
    </p>
}


@code {
    public enum TypeTag
    {
        Prymary,
        Secundary
    }

    [Parameter]
    public TypeTag Size { get; set; } = TypeTag.Prymary;

    [Parameter]
    public string? Text { get; set; }
}

<style>
    .tag {
        border-radius: 8px;
        background-color: #10AC84;
        color: #fff;
    }

    .big {
        padding: 8px 16px;
        font-size: 16px;
    }

    .small {
        padding: 4px 6px;
        font-size: 10px;
    }
</style>
