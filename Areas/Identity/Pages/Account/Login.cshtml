@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<form id="account" method="post" class="container col-lg-6">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Input.Email" class="form-label text-dark">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control " autocomplete="current-password" aria-required="true" placeholder="password" />
        <label asp-for="Input.Password" class="form-label text-dark">Senha</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="checkbox mb-3">
        <label asp-for="Input.RememberMe" class="form-label">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
    </div>
    <div>
        <button id="login-submit" type="submit" class="w-100 btn" style="border-radius: 8px; background-color: #10AC84; color: #fff; font-weight: bold">Entrar</button>
    </div>
    <div class="d-flex justify-content-between mt-3">
        <a href="/" class="text-white">Voltar</a>
        <a href="./Register" class="text-white">Cadastrar</a>
    </div>
   @*  <div>
        <p>
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        </p>
        <p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>
        <p>
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
        </p>
    </div> *@
</form>

<style>
    a{
        text-decoration: none;
        opacity: 0.7;
        transition: all ease 0.3s;
        &:hover{
            opacity: 1;
        }
    }
</style>

